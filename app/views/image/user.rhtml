<% @page_title = "#{@user_name} - Willustrator" %>
<div class="body">

<div class="tags">
  <a href="/<%= @user_name %>/"><%= @user_name %></a>'s Tags<br />
  <%
  @tags.each do |tag|
    %>
    <%= link_to tag.name, "/#{@user_name}/#{CGI.escape(tag.name)}", "class"=>"tag" %>
    (<%= tag.count %>)
    <br />
    <%
  end
  %>
</div>

<h1>
  <%
  if params[:tag]
    %>
    <a href="/<%= @user_name %>/"><%= @user_name %></a>'s
    <span class="tag"><%= params[:tag] %></span>
    <%
  else
    %>
    <%= @user_name %>'s Images
    <%
  end
  %>
</h1>

<% if @is_owner %>
  <div style="text-align: center">
  <% form_tag :action => "new_item" do %>
    <input type="submit" value="Create New Image" />
  <% end %>
  </div>
<% end %>
 
<div class="image-list">
  <%= render :partial => "image_list", :collection => @images %>
</div>

<%= render_partial 'pager', @pages %>

</div>
